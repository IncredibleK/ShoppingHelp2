<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_list_tile_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:text="@string/id"
            android:textAlignment="center"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/iv_list_picture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            app:srcCompat="@mipmap/shopping_list" />

        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.4"
            android:gravity="center_vertical"
            android:text="@string/list_tile_name"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/tv_delete_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="0.3"
            app:srcCompat="@mipmap/delete_picture" />
    </LinearLayout>
</android.widget.FrameLayout>